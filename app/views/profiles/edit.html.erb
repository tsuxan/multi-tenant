<h1>Edit My Profiles</h1>
<%= form_with(model: @profile, local: true) do |form| %>

    <div class="input_field">
        <%= form.label :image %>
        <%= form.file_field :image%>
    </div>

    <div class="field">
        <%= form.label :full_name %>
        <%= form.text_field :full_name %>
    </div>

    <div class="field">
        <%= form.label :gender %>
        <%= form.text_field :gender%>
    </div>

    <div class="field">
        <%= form.label :address %>
        <%= form.text_field :address %>
    </div>

    <div class="field">
        <%= form.label :contact_no %>
        <%= form.number_field :contact_no %>
    </div>

    <div class="field">
        <%= form.label :bio %>
        <%= form.text_area :bio %>
    </div>
    
    <div>
    <%= form.submit :Update %>
    </div>
    
<% end %>

<%= link_to "Back", profile_path %>